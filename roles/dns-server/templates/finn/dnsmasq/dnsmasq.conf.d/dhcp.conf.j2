# This is the default gateway.
# TODO
# dhcp-option=option:router, {{ hostvars['gateway-ogd'].interfaces.lan.ip4.address | ansible.utils.ipv4('address') | mandatory }}
dhcp-option=option:router, 172.16.1.101

# For Android devices, send information that we run a metered network.
dhcp-option-force=43,ANDROID_METERED
