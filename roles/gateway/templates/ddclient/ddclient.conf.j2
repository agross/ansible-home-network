# vim: set ft=jinja-properties ts=2 sw=2 et:

daemon=1m                           # Check every minute.
verbose=yes                         # Logging.
debug=yes
min-error-interval=1s               # After errors, allow new attempts after 1s.
syslog=yes                          # Log update messages to syslog.
mail=root                           # Mail all messages to root.
mail-failure=root                   # Mail failed update messages to root.
pid=/run/ddclient/ddclient.pid      # Record PID in file.
ssl=yes                             # Use TLS support. Works withssl-library.

use=if, if={{ interfaces.telekom.device }}
# use=web, web=https://checkip.dynu.com/, web-skip='IP Address'

# Tunnelbroker he-ipv6.
protocol=dyndns2, \
server=ipv4.tunnelbroker.net, \
login={{ he_ipv6.username | ansible.builtin.mandatory }}, \
password={{ he_ipv6.update_key | ansible.builtin.mandatory }} \
{{ he_ipv6.tunnel_id | ansible.builtin.mandatory }}

# deSEC.
protocol=dyndns2, \
server=update.dedyn.io, \
login={{ network.domain | ansible.builtin.mandatory }}, \
password={{ gateway_dyndns_password | ansible.builtin.mandatory }} \
{{ network.domain | ansible.builtin.mandatory }}&myipv6=preserve
