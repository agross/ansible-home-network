services:
  server:
    image: ghcr.io/immich-app/immich-server:v1.144.1
    hostname: {{ immich_domain | ansible.builtin.mandatory }}
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - ./app:/data
      - ./app/library:/external
      - ./immich-config.json:/immich-config.json:ro
    env_file:
      - .env
    ports:
      - 2283:2283
    depends_on:
      - redis
      - db

  machine-learning:
    image: ghcr.io/immich-app/immich-machine-learning:v1.144.1
    volumes:
      - ml-model-cache:/cache
    env_file:
      - .env

  redis:
    image: redis:8.2-alpine
    volumes:
      - ./redis:/data
    healthcheck:
      test: redis-cli ping | grep -xq PONG
      start_period: 5s
      interval: 5s

  db:
    image: ghcr.io/immich-app/postgres:17-vectorchord0.4.2
    env_file:
      - .env
    environment:
      POSTGRES_DB: ${DB_DATABASE_NAME}
      POSTGRES_USER: ${DB_USERNAME}
      POSTGRES_PASSWORD: ${DB_PASSWORD}
      POSTGRES_INITDB_ARGS: --locale-provider=icu --icu-locale=de-DE --data-checksums
      # Uncomment the DB_STORAGE_TYPE: 'HDD' var if your database isn't stored on SSDs
      # DB_STORAGE_TYPE: 'HDD'
    volumes:
      - ./db:/var/lib/postgresql/data

volumes:
  ml-model-cache:
