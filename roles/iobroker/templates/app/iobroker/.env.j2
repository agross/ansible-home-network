LANG=en_US.UTF-8
LANGUAGE=en_US:en
LC_ALL=en_US.UTF-8
PACKAGES=
TZ=Europe/Berlin
IOB_ADMINPORT={{ iobroker_ports.iobroker | ansible.builtin.mandatory }}
USBDEVICES={{ iobroker_devices |
                default([]) |
                selectattr('usb', 'defined') |
                selectattr('usb', 'equalto', True) |
                map(attribute = 'container') |
                list |
                join(';') }}

# No package update on first run.
OFFLINE_MODE=true

{% if iobroker_support_wake_on_lan | default(false) | bool %}
IOB_STATESDB_HOST=localhost
{% else %}
IOB_STATESDB_HOST=redis
{% endif %}
IOB_STATESDB_PORT=6379
IOB_STATESDB_TYPE=redis
