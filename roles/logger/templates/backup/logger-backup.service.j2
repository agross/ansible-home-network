[Unit]
Description=InfluxDB + Grafana Logger backup
OnFailure=unit-status-mail@%n.service
FailureAction=reboot-force
Wants=network-online.target

[Service]
RuntimeMaxSec=15min
ExecStart=/bin/systemd-inhibit --why '%n' \
                               '{{ root }}/backup/backup'

[Install]
WantedBy=multi-user.target
