# ---------------------------------------------------------------------------
# This template contains only required options.
# Visit the docs to find more https://docs.tandoor.dev/system/configuration/
# ---------------------------------------------------------------------------

# random secret key, use for example `base64 /dev/urandom | head -c50` to generate one
SECRET_KEY={{ tandoor_secret_key | ansible.builtin.mandatory }}

# allowed hosts (see documentation), should be set to your hostname(s) but might be * (default) for some proxies/providers
# ALLOWED_HOSTS=recipes.mydomain.com

# add only a database password if you want to run with the default postgres, otherwise change settings accordingly
DB_ENGINE=django.db.backends.postgresql
POSTGRES_HOST=db
POSTGRES_DB=tandoor
POSTGRES_PORT=5432
POSTGRES_USER=tandoor
POSTGRES_PASSWORD=tandoor

# For psql invocations.
PGUSER: tandoor
PGPASSWORD: tandoor

TZ=Europe/Berlin

DEBUG=0
ENABLE_SIGNUP=0

EMAIL_HOST=smtp-relay.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER={{ tandoor_smtp_user }}
EMAIL_HOST_PASSWORD={{ tandoor_smtp_password }}
EMAIL_USE_TLS=1
EMAIL_USE_SSL=0
DEFAULT_FROM_EMAIL="Tandoor <no-reply@{{ tandoor_smtp_user | split('@', 1) | last }}>"
ACCOUNT_EMAIL_SUBJECT_PREFIX="Tandoor Recipes: "
