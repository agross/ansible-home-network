{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":approveMajorUpdates",
    ":disableDigestUpdates",
    ":disableRateLimiting",
    ":enableVulnerabilityAlerts",
    ":rebaseStalePrs",
    ":semanticCommitsDisabled"
  ],
  "docker-compose": {
    "managerFilePatterns": ["/(^|/)(?:docker-)?compose[^/]*\\.ya?ml\\.j2$/"]
  },
  "customManagers": [
    {
      "description": "Magic comments",
      "customType": "regex",
      "managerFilePatterns": ["/(^|/).+\\.ya?ml$/"],
      "matchStrings": [
        "# renovate: (?<datasource>[a-z-.]+?)=(?<packageName>.+?)(?: depName=(?<depName>.+?))?(?: versioning=(?<versioning>[a-z-]+?))?\\s.+?\\w+?:\\s*(?<currentValue>.+?)\\s"
      ]
    }
  ],
  "customDatasources": {
    "fedora": {
      "defaultRegistryUrlTemplate": "https://fedoraproject.org/releases.json",
      "format": "json",
      "transformTemplates": [
        "{ \"releases\": $[variant=\"{{ packageName }}\"][subvariant=\"{{ packageName }}\"][arch=\"x86_64\"].{ \"version\": version, \"isStable\": true, \"sourceUrl\": link, \"changelogUrl\": \"https://fedoraproject.org/wiki/Releases/\" & version & \"/ChangeSet\" }, \"sourceUrl\": \"https://fedoraproject.org/releases.json\", \"homepage\": \"https://fedoraproject.org\" }"
      ]
    }
  },
  "packageRules": [
    {
      "description": "No license purchased for newer versions",
      "matchPackageNames": ["jetbrains/teamcity-server"],
      "matchManagers": ["docker-compose"],
      "enabled": false
    },
    {
      "description": "Newer versions seem incompatible with TeamCity",
      "matchPackageNames": ["jetbrains/hub"],
      "matchManagers": ["docker-compose"],
      "enabled": false
    },
    {
      "description": "Strange versioning scheme: Z-Stack_3.x.0_coordinator_20240710",
      "matchPackageNames": ["Koenkk/Z-Stack-firmware"],
      "versioning": "regex:(?<compatibility>\\w+)_(?<major>\\d+)$"
    },
    {
      "description": "Updates require manual backup and restore",
      "matchPackageNames": ["postgres"],
      "enabled": false
    }
  ]
}
