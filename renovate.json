{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":approveMajorUpdates",
    ":disableDigestUpdates",
    ":disableRateLimiting",
    ":enableVulnerabilityAlerts",
    ":rebaseStalePrs",
    ":semanticCommitsDisabled"
  ],
  "docker-compose": {
    "managerFilePatterns": ["/(^|/)(?:docker-)?compose[^/]*\\.ya?ml\\.j2$/"]
  },
  "customManagers": [
    {
      "description": "Magic comments",
      "customType": "regex",
      "managerFilePatterns": ["/(^|/).+\\.ya?ml$/"],
      "matchStrings": [
        "# renovate: (?<datasource>[a-z-]+?)=(?<packageName>.+?)(?: depName=(?<depName>.+?))?(?: versioning=(?<versioning>[a-z-]+?))?\\s.+?\\w+?:\\s*(?<currentValue>.+?)\\s"
      ]
    }
  ],
  "packageRules": [
    {
      "description": "No license purchased for newer versions",
      "matchPackageNames": ["jetbrains/teamcity-server"],
      "matchManagers": ["docker-compose"],
      "enabled": false
    },
    {
      "description": "Strange versioning scheme: Z-Stack_3.x.0_coordinator_20240710",
      "matchPackageNames": ["Koenkk/Z-Stack-firmware"],
      "versioning": "regex:_(?<major>\\d+)$"
    }
  ]
}
