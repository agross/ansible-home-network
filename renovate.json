{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":approveMajorUpdates",
    ":disableDigestUpdates",
    ":disableRateLimiting",
    ":enableVulnerabilityAlerts",
    ":rebaseStalePrs",
    ":semanticCommitsDisabled"
  ],
  "docker-compose": {
    "managerFilePatterns": ["/(^|/)(?:docker-)?compose[^/]*\\.ya?ml\\.j2$/"]
  }
}
