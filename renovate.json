{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":approveMajorUpdates",
    ":disableDigestUpdates",
    ":disableRateLimiting",
    ":enableVulnerabilityAlerts",
    ":rebaseStalePrs",
    ":semanticCommitsDisabled"
  ],
  "docker-compose": {
    "managerFilePatterns": ["/(^|/)(?:docker-)?compose[^/]*\\.ya?ml\\.j2$/"]
  },
  "customManagers": [
    {
      "description": "Magic comments",
      "customType": "regex",
      "managerFilePatterns": ["/(^|/).+\\.(ya?ml|j2)$/"],
      "matchStrings": [
        "# renovate: (?<datasource>[a-z-.]+?)=(?<packageName>.+?)(?: depName=(?<depName>.+?))?(?: versioning=(?<versioning>[a-z-]+?))?\\s.+?\\w+?[:=]\\s*(?<currentValue>.+?)\\s",
        "# renovate: (?<datasource>pypi)(?: depName=(?<depName>.+?))?(?: versioning=(?<versioning>[a-z-]+?))?\\s.+?(?<packageName>\\w+?)==\\s*(?<currentValue>.+?)\\s"
      ]
    }
  ],
  "customDatasources": {
    "fedora": {
      "defaultRegistryUrlTemplate": "https://fedoraproject.org/releases.json",
      "format": "json",
      "transformTemplates": [
        "{ \"releases\": $[variant=\"{{ packageName }}\"][subvariant=\"{{ packageName }}\"][arch=\"x86_64\"].{ \"version\": version, \"isStable\": true, \"changelogUrl\": \"https://fedoraproject.org/wiki/Releases/\" & version & \"/ChangeSet\" }, \"sourceUrl\": \"https://fedoraproject.org/releases.json\", \"homepage\": \"https://fedoraproject.org\" }"
      ]
    },
    "proxmox": {
      "defaultRegistryUrlTemplate": "https://www.proxmox.com/en/downloads/proxmox-{{ packageName }}/iso",
      "format": "html",
      "transformTemplates": [
        "{ \"releases\": releases[version ~> /\\.iso$/].{ \"version\": $replace($.version, /.*proxmox-ve_(.*)-.*\\.iso$/, '$1') }.{ \"version\": $.version, \"isStable\": true, \"sourceUrl\": \"https://www.proxmox.com/en/downloads/proxmox-virtual-environment/iso\", \"changelogUrl\": \"https://pve.proxmox.com/wiki/Roadmap#Proxmox_VE_\" & $.version } } "
      ]
    }
  },
  "packageRules": [
    {
      "description": "No license purchased for newer versions",
      "matchPackageNames": ["jetbrains/teamcity-server"],
      "matchManagers": ["docker-compose"],
      "enabled": false
    },
    {
      "description": "Newer versions seem incompatible with TeamCity",
      "matchPackageNames": ["jetbrains/hub"],
      "matchManagers": ["docker-compose"],
      "enabled": false
    },
    {
      "description": "Strange versioning scheme: Z-Stack_3.x.0_coordinator_20240710",
      "matchPackageNames": ["Koenkk/Z-Stack-firmware"],
      "versioning": "regex:(?<compatibility>\\w+)_(?<major>\\d+)$"
    },
    {
      "description": "Major updates require manual backup and restore",
      "matchPackageNames": ["postgres"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "Group ELK stack updates",
      "matchPackageNames": ["/docker\\.elastic\\.co/"],
      "groupName": "ELK Stack"
    },
    {
      "description": "Group Immich updates",
      "matchPackageNames": ["/immich-app/"],
      "groupName": "Immich"
    }
  ]
}
