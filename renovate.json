{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":approveMajorUpdates",
    ":disableDigestUpdates",
    ":disableRateLimiting",
    ":enableVulnerabilityAlerts",
    ":rebaseStalePrs",
    ":semanticCommitsDisabled"
  ],
  "docker-compose": {
    "managerFilePatterns": ["/(^|/)(?:docker-)?compose[^/]*\\.ya?ml\\.j2$/"]
  },
  "customManagers": [
    {
      "description": "Magic comments",
      "customType": "regex",
      "managerFilePatterns": ["/(^|/).+\\.ya?ml$/"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))?\\s.+?_version:\\s*(?<currentValue>.+?)\\s"
      ]
    },
    {
      "description": "Magic comments (docker image:tag)",
      "customType": "regex",
      "managerFilePatterns": ["/(^|/).+\\.ya?ml$/"],
      "datasourceTemplate": "docker",
      "matchStrings": [
        "# renovate: datasource=docker(?: depName=(?<depName>.+?))?(?: versioning=(?<versioning>[a-z-]+?))?\\s.+?_version:\\s*(?<packageName>.+?):(?<currentValue>.+?)\\s"
      ]
    }
  ],
  "packageRules": [
    {
      "description": "No license purchased for newer versions",
      "matchPackageNames": ["jetbrains/teamcity-server"],
      "matchManagers": ["docker-compose"],
      "enabled": false
    }
  ]
}
